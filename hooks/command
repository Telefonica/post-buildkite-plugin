#!/usr/bin/env bash

set -uo pipefail
set +e

env | sort

echo " ------------- "

pwd
ls

echo " ------------- "

env | docker run -i  docker.io/jmendiara/post-buildkite-plugin@sha256:15c23ba5d1bfa354c836de6b2c868f3946ae4820e07d5567d4726cd2df89c797

echo " ------------- "
echo " COMIENZA LA EJECUCION "
echo " ------------- "

eval "${BUILDKITE_COMMAND}"
exit_code=$?

if [ $exit_code -ne 0 ]; then
  echo "Ha petado"
  exit $exit_code
fi

echo "Palante"

