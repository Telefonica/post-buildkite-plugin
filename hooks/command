#!/usr/bin/env bash

set -uo pipefail
set +e

env | sort

echo " COMIENZA LA EJECUCION "
echo " ------------- "

pushd ${BUILDKITE_BUILD_CHECKOUT_PATH}
eval "${BUILDKITE_COMMAND}"
exit_code=$?
popd

echo " ------0------- "
echo "$BUILDKITE_PLUGIN_POST_POST_0_WHEN"
echo "$BUILDKITE_PLUGIN_POST_POST_0_STEPS"
echo " ------1------ "
echo "$BUILDKITE_PLUGIN_POST_POST_1_WHEN"
echo "$BUILDKITE_PLUGIN_POST_POST_1_STEPS"

if [ $exit_code -ne 0 ]; then
  echo "Ha petado"
  exit $exit_code
fi

echo "Palante"

