#!/usr/bin/env bash

set -uo pipefail
set +e

env | sort

echo " ------------- "

pwd
ls

echo " ------------- "

env | docker run -i  docker.io/jmendiara/post-buildkite-plugin@sha256:3b83d78d7850505bca11f84051040dbe32870731304a9aaca887a07bef170f1d

echo " ------------- "
echo " COMIENZA LA EJECUCION "
echo " ------------- "

eval "${BUILDKITE_COMMAND}"
exit_code=$?

if [ $exit_code -ne 0 ]; then
  echo "Ha petado"
  exit $exit_code
fi

echo "Palante"

