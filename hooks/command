#!/usr/bin/env bash

set -uo pipefail
set +e

env | sort

echo " ------------- "

pwd
ls

echo " ------------- "

env | docker run -i -v `pwd`/test.js:/test.js: node:10.11.0-alpine /test.js

echo " ------------- "

echo " COMIENZA LA EJECUCION "
echo " ------------- "

eval "${BUILDKITE_COMMAND}"
exit_code=$?
popd

if [ $exit_code -ne 0 ]; then
  echo "Ha petado"
  exit $exit_code
fi

echo "Palante"

